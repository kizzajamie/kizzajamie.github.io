{
  "styles": {
    "theme": {
      "primaryColor": "#007bff",
      "secondaryColor": "#6c757d",
      "accentColor": "#28a745",
      "backgroundColor": "#f8f9fa",
      "textColor": "#212529",
      "borderColor": "#dee2e6"
    },
    "typography": {
      "fontFamily": "'Arial', sans-serif",
      "headingFontFamily": "'Helvetica', sans-serif",
      "fontSize": "16px",
      "headingFontSize": "24px",
      "lineHeight": "1.5"
    },
    "buttons": {
      "default": {
        "backgroundColor": "#007bff",
        "textColor": "#ffffff",
        "borderColor": "#007bff",
        "hover": {
          "backgroundColor": "#0056b3",
          "borderColor": "#004085"
        }
      },
      "primary": {
        "backgroundColor": "#28a745",
        "textColor": "#ffffff",
        "borderColor": "#28a745",
        "hover": {
          "backgroundColor": "#218838",
          "borderColor": "#1e7e34"
        }
      },
      "secondary": {
        "backgroundColor": "#6c757d",
        "textColor": "#ffffff",
        "borderColor": "#6c757d",
        "hover": {
          "backgroundColor": "#5a6268",
          "borderColor": "#545b62"
        }
      }
    },
    "forms": {
      "input": {
        "borderColor": "#ced4da",
        "borderRadius": "4px",
        "padding": "0.375rem 0.75rem",
        "focus": {
          "borderColor": "#007bff",
          "boxShadow": "0 0 0 0.2rem rgba(38, 143, 255, 0.25)"
        }
      },
      "label": {
        "fontSize": "14px",
        "fontWeight": "bold",
        "color": "#495057"
      }
    },
    "cards": {
      "default": {
        "backgroundColor": "#ffffff",
        "borderColor": "#dee2e6",
        "borderRadius": "0.25rem",
        "boxShadow": "0 0 0.125rem rgba(0, 0, 0, 0.075)",
        "padding": "1rem"
      },
      "highlighted": {
        "backgroundColor": "#f1f1f1",
        "borderColor": "#007bff",
        "borderRadius": "0.25rem",
        "boxShadow": "0 0 0.25rem rgba(0, 0, 0, 0.1)",
        "padding": "1rem"
      }
    },
    "footer": {
      "backgroundColor": "#343a40",
      "textColor": "#ffffff",
      "padding": "1rem",
      "fontSize": "14px",
      "links": {
        "color": "#ffffff",
        "hoverColor": "#adb5bd"
      }
    }
  }
}