{
  "loginPage": {
    "title": "Login",
    "subtitle": "Access your account",
    "fields": [
      {
        "id": "phoneNumber",
        "label": "Phone Number",
        "type": "text",
        "placeholder": "Enter your phone number",
        "validation": {
          "required": true,
          "pattern": "^[+]?[0-9]{10,15}$",
          "message": "Please enter a valid phone number"
        }
      },
      {
        "id": "password",
        "label": "Password",
        "type": "password",
        "placeholder": "Enter your password",
        "validation": {
          "required": true,
          "minLength": 6,
          "message": "Password must be at least 6 characters long"
        }
      }
    ],
    "buttons": [
      {
        "id": "loginButton",
        "text": "Login",
        "action": "/api/auth/login",
        "type": "submit"
      },
      {
        "id": "forgotPassword",
        "text": "Forgot Password?",
        "action": "/reset-password"
      }
    ],
    "links": [
      {
        "id": "signupLink",
        "text": "Don't have an account? Sign Up",
        "action": "/signup"
      }
    ],
    "footer": {
      "text": "Â© 2024 Investment Website. All rights reserved."
    }
  }
}